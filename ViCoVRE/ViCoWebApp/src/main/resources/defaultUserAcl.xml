<?xml version="1.0" encoding="UTF-8"?>
<permissions>
    <permissionSet className="PermissionSet"
            name="Who can change the permissions of the user">
        <role name="Administrator" allow="true" >
            <operation>Change Permissions</operation>
        </role>
        <user name="?user" allow="true" >
            <operation>Change Permissions</operation>
        </user>
    </permissionSet>
    <permissionSet className="User">
        <role name="AuthUser" allow="true">
            <operation>See User</operation>
        </role>
        <role name="Administrator" allow="true">
            <operation>Delete User</operation>
            <operation>Change User</operation>
            <operation>Change Roles</operation>
        </role>
        <user name="?user" allow="true">
            <operation>Delete User</operation>
            <operation>Change User</operation>
        </user>
    </permissionSet>
</permissions>